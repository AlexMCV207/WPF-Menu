<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="850">
    <Grid>
        <Menu x:Name="menu" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="New_Click" IsEnabled="False"/>
                <MenuItem Header="Open" Click="Open_Click"/>
                <MenuItem Header="Save" Click="Save_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="New" Click="NewRecord_Click"/>
                <MenuItem Header="Remove Selected" Click="RemoveSel_Click"/>
            </MenuItem>
        </Menu>

        <ListView Margin="10,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="383" Width="830" x:Name="listView" SelectionMode="Extended">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="5,0,0,0"/>
                    <Setter Property="Margin" Value="0,0,0,0"/>
                </Style>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="Padding" Value="5,0,0,0"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="PESEL" Width="70" DisplayMemberBinding="{Binding u_pesel}"/>
                    <GridViewColumn Header="Imię" Width="75" DisplayMemberBinding="{Binding u_name}"/>
                    <GridViewColumn Header="Drugie imię" Width="90" DisplayMemberBinding="{Binding u_sname}"/>
                    <GridViewColumn Header="Nazwisko" Width="100" DisplayMemberBinding="{Binding u_lname}"/>
                    <GridViewColumn Header="Data urodzenia" Width="90" DisplayMemberBinding="{Binding u_dateofbirth}"/>
                    <GridViewColumn Header="Numer telefonu" Width="90" DisplayMemberBinding="{Binding u_phone}"/>
                    <GridViewColumn Header="Adres zamieszkania" Width="120" DisplayMemberBinding="{Binding u_adress}"/>
                    <GridViewColumn Header="Miejscowość" Width="95" DisplayMemberBinding="{Binding u_city}"/>
                    <GridViewColumn Header="Kod pocztowy" Width="90" DisplayMemberBinding="{Binding u_postcode}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
